<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="cn.edu.wic.bean">
   <class name="User" table="user">
      <id name="id" >
        <generator class="native"></generator>
      </id>
      <property name="username" length="32" not-null="true" unique="true"></property>
      <property name="password" length="32" not-null="true"></property>
      <property name="sex" length="8" not-null="true"></property>
      <property name="classes" length="32" not-null="true"></property>
      
   </class>
</hibernate-mapping>
